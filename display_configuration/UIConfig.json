{
  "page": {
    "label": "TRANSLATE.DISPLAY_SETTINGS"
  },
  "sections": [
    {
      "id": "kiosk",
      "element": "section",
      "onSave": {
        "type": "controller",
        "endpoint": "user_interface/display_configuration",
        "method": "savescreensettings"
      },
      "saveButton": {
        "label": "TRANSLATE.APPLY",
        "data": [
          "rotatescreen",
          "touchcorrection",
          "hidecursor",
          "timeout",
          "noifplay",
          "screensavertype",
          "brightness"
        ]
      },
      "content": [
        {
          "id": "rotatescreen",
          "element": "select",
          "doc": "TRANSLATE.DISPLAY_ROT_DOC",
          "label": "TRANSLATE.DISPLAY_ROT",
           "value": {
            "value": "",
            "label": ""
          },
          "options": [
            {
              "label": "TRANSLATE.NORMAL",
              "value": "normal:0:up"
            },
            {
              "label": "TRANSLATE.INVERTED",
              "value": "inverted:2:upside_down"
            },
            {
              "label": "TRANSLATE.RIGHT",
              "value": "right:1:right_side_up"
            },
            {
              "label": "TRANSLATE.LEFT",
              "value": "left:3:left_side_up"
            }
          ]
        },
        {
          "id": "touchcorrection",
          "element": "select",
          "doc": "TRANSLATE.TOUCH_ROT_DOC",
          "label": "TRANSLATE.TOUCH_ROT",
          "value": {
            "value": "none",
            "label": "none"
          },
          "options": [
            {
              "value": "none",
              "label": "TRANSLATE.TR_NONE"
            },
            {
              "value": "swap-lr",
              "label": "TRANSLATE.TR_SWLR"
            },
            {
              "value": "swap-ud",
              "label": "TRANSLATE.TR_SWUD"
            },
            {
              "value": "swap-both",
              "label": "TRANSLATE.TR_BOTH"
            }
          ]
        },
        {
          "id": "brightness",
          "element": "equalizer",
          "label": "TRANSLATE.BRIGHTNESS",
          "dOC": "TRANSLATE.BRIGHTNESS",
          "config": {
            "orientation": "horizontal",
            "bars": [
              {
                "min": "0",
                "max": "1",
                "step": "0.10",
                "value": "0.5"
              }
            ]
          }
        },
        {
          "id": "hidecursor",
          "element": "switch",
          "label": "TRANSLATE.MOUSE_C",
          "doc": "TRANSLATE.MOUSE_C_DOC",
          "value": false
        },
        {
          "id": "screensavertype",
          "element": "select",
          "doc": "TRANSLATE.XSTYPE_DOC",
          "label": "TRANSLATE.XSTYPE",
          "value": {
            "value": "",
            "label": ""
          },
          "options": [
            {
              "value": "dpms",
              "label": "TRANSLATE.DPMS"
            },
            {
              "value": "xscreensaver",
              "label": "TRANSLATE.XSCREENSAVER"
            }
          ]
        },
        {
          "id": "xscreensettings",
          "element": "button",
          "label": "TRANSLATE.XSCREEN_SAVER_SETTING",
          "onClick": {
            "type": "plugin",
            "endpoint": "user_interface/vkiosksettings",
            "method": "xscreensettings"
          },
          "visibleIf": {
            "field": "screensavertype",
            "value": "xscreensaver"
          }
        },
        {
          "id": "timeout",
          "element": "input",
          "type": "number",
          "doc": "Set the duration before screensaver in seconds. 0 = no screensaver ",
          "label": "TRANSLATE.SCREENSAVER",
          "attributes": [
            {
              "placeholder": {}
            },
            {
              "maxlength": 4
            },
            {
              "min": 0
            },
            {
              "max": 3600
            }
          ],
          "value": 120,
          "visibleIf": {
            "field": "screensavertype",
            "value": "dpms"
          }
        },
        {
          "id": "noifplay",
          "element": "switch",
          "label": "TRANSLATE.NO_SS_IF_PLAY",
          "doc": "TRANSLATE.NO_SS_IF_PLAY_DOC",
          "value": true
        }
      ]
    }
  ]
}