{
  "page": {
    "label": "Kiosk settings"
  },
  "sections": [
    {
      "id": "kiosk",
      "element": "section",
      "label": "Rotation",
      "icon": "fa-plug",
      "onSave": {
        "type": "controller",
        "endpoint": "user_interface/vkiosksettings",
        "method": "savescreensettings"
      },
      "saveButton": {
        "label": "APPLY",
        "data": [
          "rotatescreen",
          "touchcorrection",
          "hidecursor",
          "timeout",
          "noifplay"
        ]
      },
      "content": [
        {
          "id": "rotatescreen",
          "element": "select",
          "doc": "Choose screen rotation",
          "label": "Display rotation",
          "value": {
            "value": "",
            "label": ""
          },
          "options": [
            {
              "value": "normal",
              "label": "normal"
            },
            {
              "value": "left",
              "label": "left"
            },
            {
              "value": "right",
              "label": "right"
            },
            {
              "value": "inverted",
              "label": "inverted"
            }
          ]
        },
        {
          "id": "touchcorrection",
          "element": "select",
          "doc": "Adjust touchscreen orientation offset",
          "label": "Touch rotation",
          "value": {
            "value": "none",
            "label": "none"
          },
          "options": [
            {
              "value": "none",
              "label": "none"
            },
            {
              "value": "swap-lr",
              "label": "swap left/right"
            },
            {
              "value": "swap-ud",
              "label": "swap up/down"
            },
            {
              "value": "swap-both",
              "label": "swap both (180Â°)"
            }
          ]
        },
        {
          "id": "hidecursor",
          "element": "switch",
          "label": "Hide mouse cursor",
          "value": false
        },
        {
          "id": "timeout",
          "element": "input",
          "type":"number",
          "doc": "Set the duration before screensaver in seconds. 0 = no screensaver ",
          "label": "Screensaver in ",
            "attributes": [
            {
              "placeholder": {}
            },
            {
              "maxlength": 4
            },
            {
              "min": 0
            },
            {
              "max": 3600
            }
          ],
          "value": 120
        },
         {
          "id": "noifplay",
          "element": "switch",
          "label": "No screensaver when playing",
          "value": true
        }
      ]
    }
  ]
}