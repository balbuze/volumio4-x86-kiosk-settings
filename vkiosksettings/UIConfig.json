{
  "page": {
    "label": "TRANSLATE.TITLE"
  },
  "sections": [
    {
      "id": "kiosk",
      "element": "section",
      "label": "Rotation",
      "icon": "fa-plug",
      "onSave": {
        "type": "controller",
        "endpoint": "user_interface/vkiosksettings",
        "method": "savescreensettings"
      },
      "saveButton": {
        "label": "TRANSLATE.APPLY",
        "data": [
          "rotatescreen",
          "touchcorrection",
          "hidecursor",
          "timeout",
          "noifplay"
        ]
      },
      "content": [
        {
          "id": "rotatescreen",
          "element": "select",
          "doc": "TRANSLATE.DISPLAY_ROT_DOC",
          "label": "TRANSLATE.DISPLAY_ROT",
          "value": {
            "value": "",
            "label": ""
          },
          "options": [
            {
              "value": "normal",
              "label": "TRANSLATE.NORMAL"
            },
            {
              "value": "left",
              "label": "TRANSLATE.LEFT"
            },
            {
              "value": "right",
              "label": "TRANSLATE.RIGHT"
            },
            {
              "value": "inverted",
              "label": "TRANSLATE.INVERTED"
            }
          ]
        },
        {
          "id": "touchcorrection",
          "element": "select",
          "doc": "TRANSLATE.TOUCH_ROT_DOC",
          "label": "TRANSLATE.TOUCH_ROT",
          "value": {
            "value": "none",
            "label": "none"
          },
          "options": [
            {
              "value": "none",
              "label": "TRANSLATE.TR_NONE"
            },
            {
              "value": "swap-lr",
              "label": "TRANSLATE.TR_SWLR"
            },
            {
              "value": "swap-ud",
              "label": "TRANSLATE.TR_SWUD"
            },
            {
              "value": "swap-both",
              "label": "TRANSLATE.TR_BOTH"
            }
          ]
        },
        {
          "id": "hidecursor",
          "element": "switch",
          "label": "TRANSLATE.MOUSE_C",
          "doc": "TRANSLATE.MOUSE_C_DOC",

          "value": false
        },
        {
          "id": "timeout",
          "element": "input",
          "type":"number",
          "doc": "Set the duration before screensaver in seconds. 0 = no screensaver ",
          "label": "TRANSLATE.SCREENSAVER",
            "attributes": [
            {
              "placeholder": {}
            },
            {
              "maxlength": 4
            },
            {
              "min": 0
            },
            {
              "max": 3600
            }
          ],
          "value": 120
        },
         {
          "id": "noifplay",
          "element": "switch",
          "label": "TRANSLATE.NO_SS_IF_PLAY",
          "doc":"TRANSLATE.NO_SS_IF_PLAY_DOC",
          "value": true
        }
      ]
    }
  ]
}